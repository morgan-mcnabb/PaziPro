<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaziPro.ManageSubscriptionsPage"
             Title="Manage Subscriptions">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="newTopicEntry" Placeholder="Enter topic to subscribe" />
        <Button Text="Subscribe" Clicked="OnSubscribeClicked" />

        <Label Text="Subscribed Topics:" FontAttributes="Bold" Margin="0,20,0,0" />

        <CollectionView x:Name="subscriptionsCollectionView" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Unsubscribe"
                                           BackgroundColor="Red"
                                           Invoked="OnUnsubscribeSwiped" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10">
                            <Label Text="{Binding}" VerticalOptions="Center" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>